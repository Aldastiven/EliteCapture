<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="#96000000">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:background="@drawable/bordercontainer2"
        android:layout_weight="10">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textAlignment="inherit"
                    android:text="Digita el limite del conteo maximo para este control."/>

                <EditText
                    android:layout_gravity="center"
                    android:id="@+id/txtnewRegla"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="#757575"
                    android:textSize="20sp"
                    android:hint="                         "
                    android:layout_marginBottom="20sp"
                    android:paddingVertical="10sp"
                    android:paddingHorizontal="5sp"
                    android:background="@drawable/border"
                    android:backgroundTint="#e5e8e8"
                    android:layout_marginTop="10sp"
                    android:inputType="number"/>

                <TextView
                    android:id="@+id/txtDialogID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <Button
                        android:id="@+id/popcancelarRegla"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background=" #cd6155 "
                        android:text="Cancelar"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:layout_margin="5sp"
                        android:onClick="cancelar"/>

                    <Button
                        android:id="@+id/popaceptarRegla"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background=" #2980b9 "
                        android:text="Aceptar"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:layout_margin="5sp"/>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>