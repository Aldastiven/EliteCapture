<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#7E7D7D</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#FF6D00</item>
        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1</item>
        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#2962FF</item>
    </style>

    <style name="MyProgressDialogNormal" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#304FFE</item>
    </style>

    <style name="MyProgressDialogDespues" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#00C853</item>
    </style>

    <style name="RadioGood" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:background"> #00C853 </item>
    </style>

    <style name="RadioNull" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:background"> #7f8c8d </item>
    </style>

    <style name="RadioBad" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:background">  #ec7063 </item>
    </style>

</resources>
